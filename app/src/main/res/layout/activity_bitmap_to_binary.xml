<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bitmap.tobinary.BitmapToBinaryActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_src"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="原图：" />

            <ImageView
                android:id="@+id/iv_src"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="原图" />

            <TextView
                android:id="@+id/tv_restore_jpeg_100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="JPEG-100-还原后的图：" />

            <ImageView
                android:id="@+id/iv_restore_jpeg_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="JPEG-100-还原后的图" />

            <TextView
                android:id="@+id/tv_restore_jpeg_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="JPEG-50-还原后的图：" />

            <ImageView
                android:id="@+id/iv_restore_jpeg_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="JPEG-50-还原后的图" />

            <TextView
                android:id="@+id/tv_restore_jpeg_target_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="JPEG-目标大小-还原后的图：" />

            <ImageView
                android:id="@+id/iv_restore_jpeg_target_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="JPEG-目标大小-还原后的图" />

            <TextView
                android:id="@+id/tv_restore_png_100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="PNG-100-还原后的图：" />

            <ImageView
                android:id="@+id/iv_restore_png_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="PNG-100-还原后的图" />

            <TextView
                android:id="@+id/tv_restore_png_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="PNG-50-还原后的图：" />

            <ImageView
                android:id="@+id/iv_restore_png_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="PNG-50-还原后的图" />

            <TextView
                android:id="@+id/tv_restore_byte_buffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ByteBuffer-还原后的图：" />

            <ImageView
                android:id="@+id/iv_restore_byte_buffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="ByteBuffer-还原后的图" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9000"
        android:visibility="gone"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>