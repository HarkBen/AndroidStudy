<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bitmap.BitmapEntryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnSubsamplingScaleImageView"
            style="@style/btn_style_lower"
            android:text="大图加载：subsampling-scale-image-view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnBitmapOptions"
            style="@style/btn_style_lower"
            android:text="开发艺术探索：Bitmap采样率实战"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnSubsamplingScaleImageView" />

        <Button
            android:id="@+id/btnBitmapType"
            style="@style/btn_style_lower"
            android:text="获取Bitmap类型"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBitmapOptions" />

        <Button
            android:id="@+id/btnBitmapCompress"
            style="@style/btn_style_lower"
            android:text="Bitmap压缩"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBitmapType" />

        <Button
            android:id="@+id/btnBitmapToBinary"
            style="@style/btn_style_lower"
            android:text="Bitmap转换成二进制数据"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBitmapCompress" />

        <Button
            android:id="@+id/btnBitmapGlideCrop"
            style="@style/btn_style_lower"
            android:text="Bitmap通过Glide裁剪，从下往上"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBitmapToBinary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>